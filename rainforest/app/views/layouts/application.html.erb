<!DOCTYPE html>
<html>
  <head>
    <title>Rainforest</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <%= yield %>

    <p class="userinfo">
      <% if current_customer %>
        Signed in as <%= current_customer.email %>. <%= link_to "Log out", session_path("current"), method: :delete %>
      <% else %>
        <%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_customer_path %>
      <% end %>
    </p>

  </body>
</html>
